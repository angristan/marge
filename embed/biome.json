{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "files": {
        "include": ["src/**/*.ts", "src/**/*.tsx", "*.ts"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "overrides": [
        {
            "include": ["**/*.test.ts", "**/*.test.tsx"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        }
    ]
}
