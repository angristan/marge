# Bulla Docker Compose Environment

APP_NAME=Bulla
APP_ENV=production
APP_DEBUG=false
# Change this to your domain
APP_URL=http://localhost:8000

# Database: sqlite (default) or pgsql
DB_CONNECTION=sqlite
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=bulla
# DB_USERNAME=bulla
# DB_PASSWORD=secret

# Redis (required for queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Session/Cache/Queue
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=redis
